<div class="row">
  <%= form_with(model: project, local: true, class: "col s12") do |f| %>

    <% if project.errors.any? %>
      <div id="error_explanation">
        <h5>
          <%= pluralize(project.errors.count, "error") %> 
          Não foi possivel criar o projeto pelos erros
        </h5>
        <ul>
          <% project.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :title, autofocus: true, class: "validate" %>
        <%= f.label "Titulo" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.text_area :description, class: "materialize-textarea" %>
        <%= f.label "Descrição" %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s3">
        <%= f.text_field :end_date, class: 'datepicker' %>
        <%= f.label "Data de encerramento" %>
      </div>

      <div class="input-field col s3">
        <%= f.text_field :target_value %>
        <%= f.label "Valor da meta" %>
      </div>

      <div class="input-field col s6">
        <div class="file-field input-field">
          <div class="btn">
            <span>Upload image</span>
            <%= f.file_field :image_project %>
          </div>
          <div class="file-path-wrapper">
            <%= f.text_field :image_name,  class: "file-path validate" %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col s12">
        <div class="input-field inline">
          <button class="btn waves-effect waves-light" type="submit" name="action">
            Criar Projeto
            <i class="material-icons right">send</i>
          </button>

          <button class="btn waves-effect waves-light" type="submit" name="action">
            Voltar
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
