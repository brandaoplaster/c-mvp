<div class="container">
  <h5> Meus Projetos </h5>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col s12 m4">
        <div class="card">
          <div class="card-image">
            <% if project.image_project.attached? %>
              <%= image_tag rails_blob_path(project.image_project), class: "image-project" %>
            <% end %>
          </div>
          <div class="card-content">
            <span class="card-title">
              <a href="/projects/<%= project.id %>">
                <%= project.title %>
              </a>
            </span>
            <span>
              por <%= project.user.name %>
            </span>
            <p>
              <%= truncate(project.description, length: 25) %>
            </p>
            <p>
              <%= format_monetary_value(project.target_value) %>
            </p>
            <p>
              <%= formart_date(project.end_date) %>
            </p>
          </div>
          <div class="card-action">
            <%= link_to 'Deletar', url_for(action: :destroy, id: project.id), method: :delete, data: {confirm: "VocÃª tem certeza?"}, class: "btn red lighten-2 btn-small" %>
            <%= link_to 'Editar', edit_project_path(project.id), class: "btn blue btn-small" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>