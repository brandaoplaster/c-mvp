<div class="container">
  <h5> Meus Projetos </h5>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col s12 m4">
        <div class="card">
          <div class="card-image">
            <% if project.image_project %>
              <%= image_tag rails_blob_path(project.image_project) %>
            <% end %>
          </div>
          <div class="card-content">
            <span class="card-title">
              <a href="/projects/<%= project.id %>">
                <%= project.title %>
              </a>
            </span>
            <span>
              <%= project.user.name %>
            </span>
            <p>
              <%= truncate(project.description, length: 25) %>
            </p>
            <p>
              <%= project.target_value %>
            </p>
            <p>
              <%= project.end_date.strftime("%d-%m-%Y") %>
            </p>
          </div>
          <div class="card-action">
            <%= link_to 'Delete', url_for(action: :destroy, id: project.id),method: :delete, data: {confirm: "Are you sure?"} %>
            <%= link_to 'Editar', edit_project_path(project.id) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>